<export_layout name="EFD-ICMS-IPI" version="v1.0" >
	
	<data_source_config clazz_path="sped.efd.icms_ipi">
		<data_source name="0000" description="Abertura do Arquivo Digital" index="DT_INI|DT_FIN" />			
		<data_source name="0150" description="Participantes" parent="0000" index="COD_PART" />
		<data_source name="0200" description="Produtos" parent="0000" index="COD_ITEM" />
		<data_source name="C100" description="E_S" parent="0000" index="COD_MOD|SER|NUM_DOC"/>
		<data_source name="C170" description="Itens" parent="C100"/>
		<data_source name="C190" description="Resumo Op" parent="C100"/>
		<data_source name="C197" description="Ajuste doc fiscal" parent="C100"/>
		<data_source name="E100" description="Apuração ICMS" index="DT_INI|DT_FIN" />
		<data_source name="E110" description="Apuração do ICMS - Operações Próprias" parent="E100"/>
	</data_source_config>

	<tabs>
		<tab name="0000 - Abertura" data_source="0000">
			<column name="__all__"/>
		</tab>

		<tab name="0150 - Participantes" data_source="0150">
			<column name="__all__"/>
		</tab>

		<tab name="0200 - Produtos" data_source="0200">
			<column name="__all__"/>
		</tab>

		<tab name="C100 - E_S" data_source="C100">	
			<column name="IND_OPER"/>
			<column name="IND_EMIT"/>
			<column name="COD_PART"/>
			<column name="COD_MOD"/>
			<column name="COD_SIT"/>
			<column name="SER"/>
			<column name="NUM_DOC"/>
			<column name="DT_DOC"/>
			<column name="VL_DOC"/>
		</tab>

		<tab name="C170 - Itens" data_source="C170">
			<column name="NUM_ITEM"/>
			<column name="COD_ITEM"/>
			<column name="QTD" />
			<column name="UNID"/>
			<column name="VL_ITEM"  />
			<column name="CFOP"/>
			<column name="CST_ICMS"/>
			<column name="VL_BC_ICMS"  />
			<column name="ALIQ_ICMS"  />
			<column name="VL_ICMS"  />
			<column name="VL_BC_ICMS_ST"  />
			<column name="ALIQ_ST"  />
			<column name="VL_ICMS_ST"  />
			<column name="VL_IPI"  />
		</tab>

		
		<tab name="C190 - Resumo Op" data_source="C190">
			<column name="__all__"/>
		</tab>

		<tab name="C197 - Ajuste doc fiscal" data_source="C197">
			<column name="__all__"/>
		</tab>

		<tab name="E110 - Apuração do ICMS" data_source="E110">
			<column name="__all__"/>	
		</tab>			
	</tabs>

</export_layout>